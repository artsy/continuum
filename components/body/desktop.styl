@media (min-device-width 1200px)
  .main-side-margin
    margin 0 170px

  .body-content-container
    padding-top 0px

  #section1.body-section-content, .section-three .body-section-content, .section-four .body-section-content, .body-section-five-content.js-section-content
    display flex
    -webkit-flex-direction row
    flex-direction row

  .body-section-five-content
    display block

  .section-two .body-section-content
    display flex
    flex-direction row-reverse

  .carousel-track__image
    width 50%

  figure.slide-images
    display none
    width 100%
    margin 0px

  figure.slide-images img
    width 100%

  .carousel-track__image .slideshow-is-active
    display block
    figcaption
      font-size 20px

  .section-one .body-section-content img
    padding-top 0px
    max-height 566px

  .body-section-content img
    max-height 400px

  .body-section-content h1.is-desktop, .section-five h1.is-desktop
    display block
    padding-top 0px
    padding-bottom 30px
    text-align center
    font-size 24px
    font-weight bolder

  .body-section-content p
    font-size 22px
    font-weight 100
    line-height 1.5

  .is-mobile
    display none

  .section-one, .section-two, .section-three, .section-five
    margin-top 200px

  .body-section-title
  .body-section-content
    border-top-style none

  .columns
  .section1-text
  .section-three-text-container
  .section-five-content__part2
    padding-left 35px
    width 50%
  .section-two-text
  .carousel-track__image
  .section-three img
  .section-five-content__part1
    padding-right 35px
    width 50%

  .section-three img
    padding-top 0px

  .columns, .section-three .body-section-content
    margin-bottom 0px

  .columns p
    font-size: 17px;

  .small-rectangle
    height 210px

  .vertical-rectangle
    height 280px
  .column-one
    margin-right 10px
  .column-two
    padding-top 150px
    margin-left 10px

  .column-one img
    padding-top 0

  .column-two
    maigin-top 0px

  .section-two-text-container
    position relative
    top 50%
    transform translateY(130%)

