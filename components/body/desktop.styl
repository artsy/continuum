@media (min-device-width 1200px)
  .main-side-margin
    margin 0 170px

  .body-content-container
    padding-top 0px

  section
    margin-top 200px

  .body-section-content
    display flex
    flex-direction row
    font-size 22px
    border-top-style none
    padding-top 0px
    margin-bottom 0px
    img
      max-height 400px
      margin-bottom 0px
      padding-top 0px

  .flex-row__reverse
    flex-direction row-reverse

  .body-section-content__section-two
    display flex
    flex-direction row-reverse

  .body-section-title.is-desktop
    display block
    padding-top 0px
    padding-bottom 30px
    text-align center
    font-size 24px
    font-weight bolder
    &:after
      content ''
      display block
      width 50px
      margin 20px auto 0 auto
      border-bottom 2px solid black

  .is-mobile
    display none

  .body-section-title, .body-section-content__section-two
    border-top-style none

  .left-gutter-formatter
    padding-left 35px
    width 50%

  .right-gutter-formatter
    padding-right 35px
    width 50%

  .columns
    margin-bottom 0px
    padding-top 0px
    p
      font-size: 17px;

  .small-rectangle
    height 210px

  .vertical-rectangle
    height 280px

  .column
    margin 0 5px

  .staggered
    padding-top 150px

  .section-two-text-container
    position relative
    top 50%
    transform translateY(130%)
