.chevron-nav-list
  section
    a.js-display-content.is-mobile
      h1.body-section-title= copy.artWorld.sectionTitle[language]
    .body-section-content.js-section-content
      .carousel-track__image.right-gutter-formatter
        include ../carousel/carousel.jade
        for figure in copy.artWorld.carousel
          +carousel-figure(figure.image_url, figure.caption[language], figure.englishCaption)(class='slide-images')
      .intro-text.left-gutter-formatter
        h1.body-section-title.is-desktop= copy.artWorld.sectionTitle[language]
        p= copy.artWorld.artWorldBody[language]
  section
    a.js-display-content.is-mobile
      h1.body-section-title= copy.collecting.collectingTitle[language]
    .body-section-content__section-two.js-section-content
      .columns.left-gutter-formatter
        .column
          include ./mixins/artist-container.jade
          - options = {path: './images/Body_2.1.jpg', artistName: 'Claude Monet', artwork: 'Le Parlement, soleil couchant (The House of Parliament, at Sunset),', artworkDate: '1900-1901,', location: 'Christie\'s', className: 'small-rectangle'}
          +artist-container(options)
          - options = {path: './images/Body_2.3.jpg', artistName: 'Jeff Koons', artwork: 'Metallic Venus,', artworkDate: '2010-2012,', location: 'Gagosian Gallery', className: 'vertical-rectangle'}
          +artist-container(options)
        .column.staggered
          - options = {path: './images/Body_2.2.jpg', artistName: 'Zhan Wang', artwork: 'Artificial Rock #96,', artworkDate: '2006 Long March Space', className: 'vertical-rectangle'}
          +artist-container(options)
          - options = {path: './images/Body_2.4.jpg', artistName: 'Ding Yi', artwork: 'Appearance of Crosses', artworkDate: '2013-11, 2013', location: 'ShanghART', className: 'small-rectangle'}
          +artist-container(options)
      .section-two-text.right-gutter-formatter
        .section-two-text-container
          h1.body-section-title.is-desktop= copy.collecting.collectingTitle[language]
          p= copy.collecting.text[language]
  section
    a.js-display-content.is-mobile
      h1.body-section-title= copy.genome.genomeTitle[language]
    .body-section-content.js-section-content
      .right-gutter-formatter
        //- img(src='./images/Body_3.jpg')
        .genome-image.body-img(style="background-image: url('./images/Body_3.jpg')")
      .left-gutter-formatter
        h1.body-section-title.is-desktop= copy.genome.genomeTitle[language]
        p.section-three-text= copy.genome.text[language]
  section
    a.js-display-content.is-mobile
      h1.body-section-title.is-mobile= copy.ios.iosTitle[language]
    .body-section-content.margin-bottom.js-section-content.flex-row__reverse
      .left-gutter-formatter
        //- img(src='./images/Body_4.jpg')
        .ios-image.body-img(style="background-image: url('./images/Body_4.jpg')")
      .right-gutter-formatter
        h1.body-section-title.is-desktop= copy.ios.iosTitle[language]
        p.format-spacing= copy.ios.text[language]
        button.avant-garde-button-black.launch-app-store= copy.ios.link[language]
  section
    h1.body-section-title.is-desktop= copy.partnership.partnershipTitle[language]
    a.js-display-content.is-mobile
      h1.body-section-title= copy.partnership.partnershipTitle[language]
    .body-section-content.js-section-content.flex-row
      .right-gutter-formatter
        p.body-section-sub-header= copy.partnership.gallery.subTitle[language]
        p.format-spacing= copy.partnership.gallery.text[language]
        button.avant-garde-button-black= copy.partnership.gallery.link[language]
      .left-gutter-formatter
        p.body-section-sub-header= copy.partnership.institution.subTitle[language]
        p.format-spacing= copy.partnership.institution.text[language]
        button.avant-garde-button-black= copy.partnership.institution.link[language]
        p.body-section-sub-header= copy.partnership.auction.subTitle[language]
        p.format-spacing= copy.partnership.auction.text[language]
        button.avant-garde-button-black.mailto-partners= copy.partnership.institution.link[language]