.carousel-track__image
  border-top 1px solid gray-color
  width 100%
  padding-top 40px
  height 255px
  position relative

figure.slide-images
  display none
  width 100%
  position absolute
  z-index 8
  margin 0px

figure.slide-images img
  width 100%

.carousel-track__image .slideshow-is-active
  display block
  z-index 10

.body-section-one-content, .body-section-three-content, .body-section-four-content
  line-height 1.5
  display none
  avant-garde('m-headline', true)
  font-size 15px
  &:not(.body-section-four-content)
    margin-bottom 60px

.vertical-rectangle
  width 100%
  height 205px

.small-rectangle
  width 100%
  height 135px

.body-section-two-content
  border-top 1px solid gray-color
  padding 40px 0 20px 0
  display none
  h2
    font-weight bold
    margin-top 15px
  .italicize
    font-style italic
  p
    line-height 1.5
    font-size 13px // switch to garamond
.columns
  -webkit-columns 2
  -moz-columns: 2
  columns: 2

.column-one > div, .column-two > div
  margin-bottom 40px

.column-one
  padding-bottom 40px

.column-two
  padding-top 55px

.claude-monet-container, .zhan-wang-container, .jeff-koons-container, .ding-yi-container
  width 100%

.section-two-text
  margin-bottom 40px
  p
    font-size 16px

.avant-garde-button-black:not(.mailto-partners)
  margin-bottom 40px

.body-section-sub-header
  font-weight bold
  margin-bottom 20px
  padding-top 20px

.body-section-five
  border-top 1px solid gray-color

.format-spacing
  padding-bottom 20px

.body-section-five-content
  display none
  p
    line-height 1.5

.image-caption-format
  margin-bottom 40px