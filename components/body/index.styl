.body-content-container
  padding-top 20px
  garamond-size('l-body')

.main-side-margin
  margin 0 20px

.body-section-title
  border-top 1px solid gray-color
  padding 20px 0
  avant-garde('l-headline')

.margin-bottom
  margin-bottom 40px

.body-section-content
  border-top 1px solid gray-color
  display none
  img
    width 100%
    margin-bottom 15px
    padding-top 40px
  &:not(.margin-bottom)
    margin-bottom 60px

.vertical-rectangle
  width 100%
  height 205px

.small-rectangle
  width 100%
  height 135px

.body-section-content__section-two
  @extends .body-section-content
  h2
    font-weight bold
    margin-top 15px
  .italicize
    font-style italic
  p
    line-height 1.5
    font-size 16px

.columns
  -webkit-columns 2
  -moz-columns: 2
  columns: 2

.column
  margin 0 5px

.artist-text > p
  font-size 13px

.staggered
  padding-top 200px
  margin-bottom 40px
  p
  font-size 13px

.artist-container
  width 100%

.avant-garde-button-black:not(.mailto-partners)
  margin-bottom 20px

.body-section-sub-header
  font-weight bold
  margin-bottom 20px
  padding-top 20px

