@media (min-width 1200px)
  .carousel-track__image
    width 50%

  .carousel-figure-img
    width 100%
    height 25vw
    background-size cover
    background-position center center

  figure.slide-images
    display none
    width 100%
    margin 0px

  figure.slide-images div
    width 100%
    margin-top 0px
    max-height 400px

  .carousel-track__image .slideshow-is-active
    display block
    figcaption
      font-size 20px