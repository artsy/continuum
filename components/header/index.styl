header
  height 50vh
  position relative

.slide-show-container
  position relative
  height 100%

.header-slide
  width 100%
  height 100%
  background-position center center
  background-size cover
  -webkit-transition: opacity 1s ease-in
  -moz-transition opacity 1s ease-in
  -o-transition opacity 1s ease-in
  -ms-transition opacity 1s ease-in
  transition opacity 1s ease-in
  position absolute
  top 0
  background-image url('./images/banner-3.jpg')
  opacity 0

.active-banner
  opacity 1
  z-index 500

.slide-1
  background-image url('./images/banner-1.jpg')

.slide-2
  background-image url('./images/banner-2.jpg')

.slide-3
  background-image url('./images/banner-3.jpg')

.header-content
  height 100%
  display table
  z-index 501
  position absolute
  top 0

.header-content-inner
  display table-cell
  height 100%
  width 100%
  vertical-align middle

.header-text
  width 80%
  margin 16% auto 0 auto
  // padding-top 30px !important
  color white
  avant-garde-size('s-headline')
  text-align justify
  font-size 20px
  > p
    margin 20px 0
    &:first-child
      margin-top 0
    &:last-child
      margin-bottom 0

.header-section-nav
  display none

.header-chevron-link
  display none

// mobile
@media (max-width 320px)
  .header-text > p
    font-size 13px

@media (orientation: landscape)
  header
    @media (max-width 480px)
      min-height 180px
    @media (max-width 320px)
      min-height 150px

  .header-content
    @media (max-width 480px)
      height 65%

  .header-text
    padding 0 20px
  .header-text > p
    @media (max-width 480px)
      font-size 12px
      font-weight bolder
    @media (max-width 320px)
      font-size 10px
      font-weight bold

// tablet
@media (min-width 481px)
  header
    height 75vh

  .slide-1
    &:before
      content "some text 1"
      position absolute
      bottom 10px
      left 30px
      color white
      garamond-size('l-caption')
      font-size 12px

  .slide-2
    &:before
      content "some text 2"
      position absolute
      bottom 10px
      left 30px
      color white
      garamond-size('l-caption')
      font-size 12px

  .slide-3
    &:before
      content "some text 3"
      position absolute
      bottom 10px
      left 30px
      color white
      garamond-size('l-caption')
      font-size 12px

  .header-content
    height 100%

  .header-text
    // width 75%
    margin 6% auto
    avant-garde-size('xl-headline')
    font-size 30px
    > p
      margin 40px 0

  .header-section-nav
    display block
    height 25%
    text-align center
    padding-top 60px
    > a
      display inline-block
      padding 8px 18px
      border-left 1px solid rgba(white, 0.5)
      border-right @border-left
      text-decoration none
      cursor pointer
      avant-garde-size('l-headline')
      font-size 14px
      color white
      transition opacity 0.25s
      &:hover
        opacity 0.5
      &:first-child
        border-left none
      &:last-child
        border-right none

  .header-chevron-link-wrapper
    display block
    text-align center

  .header-chevron-link
    display inline-block
    chevron()
    text-decoration none
    &:visited
      text-decoration none
    &::after
      text-align center
      display block
      position relative
      transform rotate(90deg)

// desktop
@media (min-width 1200px)
  header
    height 100vh

  .header-text
    avant-garde-size('xl-headline')
    font-size 50px
    > p
      margin 40px 0

  .header-section-nav
    display block
    height 25%
    text-align center
    > a
      display inline-block
      padding 15px 40px
      border-left 1px solid rgba(white, 0.5)
      border-right @border-left
      text-decoration none
      avant-garde-size('l-headline')
      color white
      transition opacity 0.25s
      &:hover
        opacity 0.5
