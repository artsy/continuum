.header
  height 350px
  position relative
  background-image url('./images/Banner_3.jpg')
  background-position center
  background-size 526px

.header nav
  width 100%
  height 62px
  // top 0
  // left 0
  border-bottom 1px solid white

.header svg
  padding 10px
  polygon, path
    fill white

.header-language-toggle
  float right
  margin 0 15px
  position relative
  top 50%
  transform translateY(-50%)

.header-chinese
  color white
  text-align center
  display inline-block
  font-size 20px
  margin-left 10px

.header-text
  margin 20px
  font-size 17px
  line-height 1.5
  position absolute
  top 50%
  transform: translate(0, -50%)

.header-text h1
  margin 30px 0
  color white

.is-header-desktop
  display none