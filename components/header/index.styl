// mobile
@media (max-width 480px)
  .header
    width 100%
    height 50vh // 50vh
    background-color black
    background-image url('./images/Banner_3.jpg')
    background-position center center
    // Not the most performant thing if we're gonna do anything fancy with it:
    background-size cover

  .header-content
    height 85% //
    display flex //
    flex-direction column //
    justify-content space-around //

  .header-text
    width 85% //
    margin 5% auto
    color white
    avant-garde-size('s-headline')
    font-size 20px //
    > p
      margin 20px 0
      &:first-child
        margin-top 0
      &:last-child
        margin-bottom 0

  .header-section-nav, .nav-item:first-child
    display none //

// tablet
@media (min-width 481px)
  .header
    width 100%
    height 75vh
    background-color black
    background-image url('./images/Banner_3.jpg')
    background-position center center
    // Not the most performant thing if we're gonna do anything fancy with it:
    background-size cover

  .header-content
    height 100%
    display flex
    flex-direction column
    justify-content space-around

  .header-text
    width 75%
    margin 5% auto
    color white
    avant-garde-size('xl-headline')
    font-size 30px
    > p
      margin 40px 0
      &:first-child
        margin-top 0
      &:last-child
        margin-bottom 0

  .header-section-nav
    display block
    height 25%
    text-align center
    > a
      display inline-block
      padding 8px 25px
      border-left 1px solid rgba(white, 0.5)
      border-right @border-left
      text-decoration none
      avant-garde-size('l-headline')
      font-size 15px
      color white
      transition opacity 0.25s
      &:hover
        opacity 0.5

