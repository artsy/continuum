.header
  width 100%
  height 50vh
  background-color black
  background-position center center
  background-size cover
  -webkit-transition: opacity 1s ease-in
  -moz-transition opacity 1s ease-in
  -o-transition opacity 1s ease-in
  -ms-transition opacity 1s ease-in
  transition opacity 1s ease-in
  position absolute
  top 0
  opacity 0

.active-banner
  opacity 1
  z-index 500

.header-banner-1
  background-image url('./images/banner-1.jpg')

.header-banner-2
  background-image url('./images/banner-2.jpg')

.header-banner-3
  background-image url('./images/banner-3.jpg')

.header-content
  height 85%
  display flex
  flex-direction column
  justify-content space-around

.header-text
  width 85%
  margin 5% auto
  color white
  avant-garde-size('s-headline')
  font-size 20px
  > p
    margin 20px 0
    &:first-child
      margin-top 0
    &:last-child
      margin-bottom 0

.header-section-nav, .nav-item:first-child
  display none

// mobile
@media (max-width 320px)
  .header-text > p
    font-size 15px

@media (orientation: landscape)
  .header
    @media (max-width 480px)
      min-height 180px
    @media (max-width 320px)
      min-height 150px

  .header-content
    @media (max-width 480px)
      height 65%


  .header-text
    padding 0 20px
  .header-text > p
    @media (max-width 480px)
      font-size 12px
      font-weight bolder
    @media (max-width 320px)
      font-size 10px
      font-weight bold

// tablet
@media (min-width 481px)
  .header
    height 75vh

  .header-content
    height 100%

  .header-text
    width 75%
    avant-garde-size('xl-headline')
    font-size 30px
    > p
      margin 40px 0

  .header-section-nav
    display block
    height 25%
    text-align center
    > a
      display inline-block
      padding 8px 25px
      border-left 1px solid rgba(white, 0.5)
      border-right @border-left
      text-decoration none
      cursor pointer
      avant-garde-size('l-headline')
      font-size 15px
      color white
      transition opacity 0.25s
      &:hover
        opacity 0.5

// desktop
@media (min-width 1200px)
  .header
    height 100vh

  .header-content
    height 100%

  .header-text
    width 75%
    avant-garde-size('xl-headline')
    font-size 50px
    > p
      margin 40px 0

  .header-section-nav
    display block
    height 25%
    text-align center
    > a
      display inline-block
      padding 15px 40px
      border-left 1px solid rgba(white, 0.5)
      border-right @border-left
      text-decoration none
      avant-garde-size('l-headline')
      color white
      transition opacity 0.25s
      &:hover
        opacity 0.5
